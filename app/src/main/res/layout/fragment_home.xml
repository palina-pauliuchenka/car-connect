<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A6C9F1">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_car_logo"
        android:contentDescription="CarConnect Logo"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CarConnect"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are at school, let's find you a ride home!"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/findRideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Ride"
        android:backgroundTint="#5C2D91"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/findPassengerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Passenger"
        android:backgroundTint="#5C2D91"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:visibility="gone" />
</LinearLayout>
